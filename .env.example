# Application Configuration
APP_NAME=rsa-global-cover-letter-builder
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=info

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
TEMPORAL_API_KEY=your_temporal_cloud_api_key_here
RENDER_API_KEY=your_render_api_key_here
GITHUB_TOKEN=your_github_token_here

# Render Configuration
RENDER_EMAIL=your_email@example.com

# HashiCorp Configuration
HCP_ORGANIZATION=your_hcp_org
HCP_PROJECT=your_hcp_project
TERRAFORM_ORGANIZATION=your_terraform_org
HCP_TERRAFORM_TOKEN=your_terraform_token

# Development URLs (for local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/jobtracker
TEMPORAL_NAMESPACE=default
TEMPORAL_ADDRESS=localhost:7233

# Production URLs (these will be set by Terraform/Render)
# DATABASE_URL=postgresql://user:pass@host:5432/dbname
# TEMPORAL_ADDRESS=your-namespace.tmprl.cloud:7233
